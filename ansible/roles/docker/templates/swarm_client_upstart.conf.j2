description "Docker Swarm Client"
author "Matt"
console log
start on filesystem
stop on runlevel [!2345]
post-stop exec sleep 10
script
/usr/local/bin/swarm join \
  --discovery {{ swarm_discovery_string }} \
  --addr={{ ansible_default_ipv4['address'] }}:2375
end script
respawn
respawn limit 30 300
